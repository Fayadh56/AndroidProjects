<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#03A9F4</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#81D4FA</item>

        <item name="android:colorPrimaryDark">#0288D1</item>

        <item name="android:colorAccent">#81D4FA</item>

    </style>

    <!-- TextView Styles -->
    <style name="TextViewStyles" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>